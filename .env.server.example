# ─────────────────────────────────────────────────────────────────────────────
# Server-Only Environment Variables
# ─────────────────────────────────────────────────────────────────────────────

# ── Runtime & Logging ────────────────────────────────────────────────────────
NODE_ENV=development                     # development | production | test
LOG_LEVEL=trace                          # trace | debug | info | warn | error | fatal

# ── ORY (Admin & Consent) ────────────────────────────────────────────────────
ORY_ADMIN_API_TOKEN=ory_admin_key        # Admin PAT/token
REMEMBER_CONSENT_SESSION_FOR_SECONDS=3600

# ── Security & Cookies ───────────────────────────────────────────────────────
COOKIE_SECRET=cookie_secret              # ≥ 8 chars
CSRF_COOKIE_NAME=__Host-domain.com-x-csrf-token
CSRF_COOKIE_SECRET=your_cookie_secret5_goes-here
DANGEROUSLY_DISABLE_SECURE_CSRF_COOKIES=true
MOCK_TLS_TERMINATION=false

# ── API Secrets ──────────────────────────────────────────────────────────────
API_SECRET_KEY=put_your_api_secret_key

# ── Payments (Stripe) ────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret_key

# ── Database (Postgres) ──────────────────────────────────────────────────────
POSTGRES_DATABASE_URL=postgres://{username}:{password}@{host}:{port}/{database}

# ── Telemetry (OpenTelemetry) ────────────────────────────────────────────────
OTEL_EXPORTER_URL=http://localhost:4318/v1/traces
