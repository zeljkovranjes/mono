{
  "name": "@safeoutput/lib",
  "version": "0.1.0",
  "private": true,
  "exports": {
    "./client/*": "./src/client/*.ts",
    "./server/*": "./src/server/*.ts"
  },
  "sideEffects": false,
  "browser": {
    "fs": false,
    "path": false,
    "crypto": false,
    "./server/*": false
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write \"**/*.ts\"",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@safeoutput/eslint-config": "workspace:*",
    "@safeoutput/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "eslint": "^9.34.0",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "kysely": "^0.28.7",
    "pg": "^8.16.3"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "kysely": {
      "optional": true
    }
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  }
}
