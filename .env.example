# ─── App Configuration ───────────────────────────────────────────
NODE_ENV=development
VITE_ROOT_DOMAIN=http://localhost:3000

# ─── Ory Network (Authentication / Authorization) ────────────────
# Base Ory SDK URL (required). Used as fallback for Kratos, Hydra, Keto.
VITE_ORY_SDK_URL=http://localhost:4000
# Example for remote Ory Network project:
# https://romantic-tu-5y1hpa9vd8.projects.oryapis.com

# Optional overrides (only set if different from VITE_ORY_SDK_URL)
# VITE_KRATOS_PUBLIC_URL=http://kratos-public.svc.cluster.local
# VITE_KRATOS_BROWSER_URL=http://localhost:4433
# KRATOS_ADMIN_URL=http://kratos:4434
# HYDRA_ADMIN_URL=http://hydra:4445
# VITE_KETO_PUBLIC_URL=http://keto:4466

# ─── Ory Admin & Consent ─────────────────────────────────────────
ORY_ADMIN_API_TOKEN=ory_admin_key
REMEMBER_CONSENT_SESSION_FOR_SECONDS=3600

# ─── Security & Cookies ─────────────────────────────────────────
COOKIE_SECRET=cookie_secret   # ≥ 8 chars
CSRF_COOKIE_NAME=__Host-domain.com-x-csrf-token
# Optional: only required for consent CSRF cookie hashing
# CSRF_COOKIE_SECRET=somesecretvalue
DANGEROUSLY_DISABLE_SECURE_CSRF_COOKIES=true
MOCK_TLS_TERMINATION=false

# API secret for protecting sensitive routes
API_SECRET_KEY=put_your_api_secret_key

# ─── Payments (Stripe) ──────────────────────────────────────────
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret_key

# ─── Database (Postgres) ────────────────────────────────────────
POSTGRES_DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres

# ─── Telemetry (OpenTelemetry) ───────────────────────────────────
OTEL_EXPORTER_URL=http://localhost:4318/v1/traces

# ─── Logger (Pino) ───────────────────────────────────
LOG_LEVEL=trace